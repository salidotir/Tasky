<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/todo_task_bg_round_rectangle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/task_todo_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Title"
            android:textSize="18sp"
            android:textColor="@color/colorGradientStart"
            android:layout_gravity="center|left"/>

        <TextView
            android:id="@+id/task_todo_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textSize="18sp"
            android:textColor="@color/colorGradientStart"
            android:layout_gravity="center|right"/>

    </LinearLayout>

    <TextView
    android:id="@+id/task_todo_body"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:text="Lorem Ipsum is simply dummy text of the printing."
    android:textSize="18sp"
    android:textColor="#323642"
    android:layout_gravity="left" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:id="@+id/alarm_background"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:background="@drawable/round_white_rectangle">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_add_alert_black_24dp"/>

            <ImageButton
                android:id="@+id/btn_add_alarm"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right|center"
                android:src="@drawable/ic_add_black_24dp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/alarm_text_view"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="10:30"
                android:textColor="#000000"
                android:layout_gravity="center|right"
                android:visibility="gone"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="right"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/todo_task_info"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_gravity="right|center"
                android:background="#00000000"
                android:src="@drawable/ic_edit_black_24dp"/>

            <ImageButton
                android:id="@+id/btn_sent_to_next_day"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right|center"
                android:background="#00000000"
                android:scaleX="-1"
                android:src="@drawable/ic_reply_black_24dp"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>