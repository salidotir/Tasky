<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tomorrow_fragment"
    android:background="@color/colorBlackBG"
    android:paddingRight="14dp"
    android:paddingLeft="14dp"
    android:paddingBottom="14dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="To Do"
        android:fontFamily="casual"
        android:textColor="#ffffff"
        android:textSize="18sp"/>

    <ImageButton
        android:id="@+id/add_new_task_next_day_frag_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_add"
        android:background="@drawable/ic_add_task_bg"/>

    <ImageView
        android:id="@+id/next_day_frag_to_do_no_data_img_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"
        android:background="@drawable/ic_undraw_no_data_qbuo_copy"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/next_day_todo_frag_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"/>

</LinearLayout>